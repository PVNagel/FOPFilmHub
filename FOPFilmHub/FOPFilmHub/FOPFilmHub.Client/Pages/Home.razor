@page "/"

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to the FOP Film Hub</MudText>
<MudText Class="mb-8">Powered by MudBlazor and the .NET 8</MudText>

