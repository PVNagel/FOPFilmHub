        <div class="d-flex justify-content-around align-items-center" style="height:100%; padding: 20px;">
            <MudImage Src="@filmPoster1" Class="mx-auto" Style="height:100%; width:auto; object-fit:contain; border-radius: 10px;" />
            <MudImage Src="@filmPoster2" Class="mx-auto" Style="height:100%; width:auto; object-fit:contain; border-radius: 10px;" />
            <MudImage Src="@filmPoster3" Class="mx-auto" Style="height:100%; width:auto; object-fit:contain; border-radius: 10px;" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition" Style="border-radius: 15px;">
        <div class="d-flex justify-content-around align-items-center" style="height:100%; padding: 20px;">
            <MudImage Src="@filmPoster4" Class="mx-auto" Style="height:100%; width:auto; object-fit:contain; border-radius: 10px;" />
            <MudImage Src="@filmPoster5" Class="mx-auto" Style="height:100%; width:auto; object-fit:contain; border-radius: 10px;" />
            <MudImage Src="@filmPoster6" Class="mx-auto" Style="height:100%; width:auto; object-fit:contain; border-radius: 10px;" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition" Style="border-radius: 15px;">
        <div class="d-flex justify-content-around align-items-center" style="height:100%; padding: 20px;">
